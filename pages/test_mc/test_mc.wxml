<view class="page">
    <view class="page_bd">
        <view class="goods-container">
            <!-- Question Title -->
            <view wx:for="{{testTitle}}">
                <view class="recommend-title">{{item.question_title}}</view>
            </view>
            <!-- Answer Box -->
            <view class="goods-box" wx:for="{{testAns}}" bindtap="toDetailsTap">
                <view class="img-box">
                    <image src="{{item.url}}" class="image" mode="aspectFill" lazy-load="true"/>
                </view>
                <view class="good-title">{{item.answer_title}}</view>
            </view>
        </view>
    </view>
    <view class="page_ft"></view>
</view>